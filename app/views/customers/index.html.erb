<article ng-app="myapp" ng-controller="CustomerSearchController">
	<header>
		<h1 class="h2">Customer Search</h1>
	</header>
	<form>
		<div class="input-group input-group-lg">
			<label for="search.keywords" class="sr-only">Keywords</label>
			<input type="text" name="keywords" class="form-control input-lg" placeholder="First Name, Last Name or Email Address"
				 ng-change="search(keywords)" 
				 ng-model="keywords" >
		</div>
	</form>
	
	<ol class="list-group">
		<li class="list-group-item clearfix" ng-repeat="customer in customers| filter: keywords | startFrom:currentPage*pageSize | limitTo:pageSize">
			<h3 class="pull-right">
				<small class="text-uppercase">Joined</small>
				{{ customer.created_at | date }}
			</h3>
			<h2 class="h3">
				{{ customer.first_name }} {{ customer.last_name }}
				<small>{{ customer.username }}</small>
			</h2>
			<h4>{{ customer.email }}</h4>
		</li>
	</ol>	
		<%= render "nav" %>
</article>





