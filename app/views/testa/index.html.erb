<div class="" ng-app="app">

  <p id="notice"><%= notice %></p>

  <h1>Testa</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @testa.each do |testum| %>
        <tr>
          <td><%= link_to 'Show', testum %></td>
          <td><%= link_to 'Edit', edit_testum_path(testum) %></td>
          <td><%= link_to 'Destroy', testum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>



  <article>
    <header>
      <h1 ng-if="name">Hello, {{name}}</h1>
    </header>
    <section>
      <form class="form-inline">
          <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" name="name" type="text" placeholder="Enter your name" autofocus ng-model="name">
          </div>
      </form>
    </section>
  </article>
<%= link_to 'New Testum', new_testum_path %>
</div>